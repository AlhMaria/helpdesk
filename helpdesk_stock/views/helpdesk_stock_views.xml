<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Inherit Form view -->
  <record id="view_stock_ticket_form" model="ir.ui.view">
    <field name="name">stock.ticket.view.form helpdesk</field>
    <field name="model">helpdesk.ticket</field>
    <field name="inherit_id" ref="helpdesk.ticket_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//notebook" position="inside">
        <page string="Picking" name="picking" attrs="{'invisible': [('stock_picking_ids', '=', [])]}">
          <group name="picking" no_label="0">
            <field name="stock_picking_ids" no_label="1"/>
          </group>

        </page>
      </xpath>

    </field>
  </record>
</odoo>
